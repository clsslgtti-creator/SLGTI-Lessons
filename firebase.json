{
  "hosting": {
    "public": "/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/:subject/E/:lesson",
        "destination": "/:subject/E/:lesson/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
